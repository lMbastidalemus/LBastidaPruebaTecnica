@model ML.Disco 
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-success" href="@Url.Action("Form", "Disco")">Agregar</a>
<table class="table">
   
    <thead>
        <tr>
            <th>IdDisco</th>
            <th>Titulo</th>
            <th>Artista</th>
            <th>Genero Musical</th>
            <th>Duracion</th>
            <th>Anio </th>
            <th>Distribuidora</th>
            <th>Ventas</th>
            <th>Disponibilidad</th>
            <th>Editar</th>
            <th>Eliminar</th>

        </tr>
    </thead>
    <tbody>
        
      
            @foreach (ML.Disco disco in Model.Discos)
            {
                <tr>
                    <td>@disco.IdDisco</td>
                    <td>@disco.Titulo</td>
                    <td>@disco.Artista</td>
                    <td>@disco.GeneroMusical</td>
                    <td>@disco.Duracion</td>
                    <td>@disco.Anio</td>
                    <td>@disco.Distribuidora</td>
                    <td>@disco.Ventas</td>
                    <td>@disco.Distribuidora</td>
                    <td><a class="btn btn-primary"  href="@Url.Action("Editar", "Disco")">Editar</a></td>
                    <td><a class="btn btn-danger"  href="@Url.Action("Delete", "Disco", new {IdDisco = disco.IdDisco})">Eliminar</a></td>
                </tr>
            }
       
        
        
    </tbody>
</table>

